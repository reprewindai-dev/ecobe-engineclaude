{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "inputs": [{ "local": true }],
      "commands": [
        {
          "cmd": "npm install",
          "customName": "Install dependencies"
        }
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }, { "local": true }],
      "commands": [
        {
          "cmd": "npm run build",
          "customName": "Build"
        }
      ]
    }
  },
  "deploy": {
    "base": {
      "step": "build"
    },
    "startCommand": "npm run start"
  }
}
